{
  "name": "nextjs-platform-benchmark-tool",
  "version": "0.1.0",
  "private": true,
  "description": "Automated benchmarking tool for Next.js hosting platforms",
  "workspaces": [
    "benchmark-app",
    "dashboard"
  ],
  "scripts": {
    "dev:benchmark": "npm run dev --workspace=benchmark-app",
    "dev:dashboard": "npm run dev --workspace=dashboard",
    "build:benchmark": "npm run build --workspace=benchmark-app",
    "build:dashboard": "npm run build --workspace=dashboard",
    "lint": "npm run lint --workspaces",
    "db:migrate": "node scripts/migrate.js"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
